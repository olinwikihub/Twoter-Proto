<div id = "header" class = "navBar">
    <button id = "logout"> Hello {{this.author}}. Click to Logout! </button>
</div>

<div id = "twoteList" class = "mainList">
    <h1> Twotes </h1>
    <form id = "addTwote" action = "/addTwote" method = "POST">
        <input id = "messageInput" type = "text"/>
        <input type = "submit" action = "submit" value = "Post"/>
    </form>
    <br>signed in as: {{author}}<br>
    <div id = "list">
        {{#each twotes}}
        <br>
        <div class = "{{this.author}}" id = "{{this._id}}">
            {{this.author}} @ {{this.displayTime}}<br>
            &nbsp;&nbsp;&nbsp; {{this.message}}<br><br>
            {{#equal ../author this.author}}
                <button id = {{this._id}} class = "deleteTwote"> Delete </button>
            {{/equal}}
        </div>
        {{/each}}
    </div>
</div>

<div id = "peopleList" class = "rightList">
    <h2> Users </h2>
    <br>
    {{#each people}}
        <a id="{{this.username}}" class = "toggleUser" title="button">{{this.username}}</a><br>
    {{/each}}
</div>
